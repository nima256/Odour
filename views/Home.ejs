              // Improved OTP input handling (LTR focus movement)
              function setupOtpInputs(containerSelector) {
                const inputs = Array.from(
                  document.querySelectorAll(`${containerSelector} .otp-input`)
                );

                // ููฺฉูุณ ุฑู ุขุฎุฑู ุงููพูุช (ุฑุงุณุชโุชุฑู)
                inputs[inputs.length - 1].focus();

                inputs.forEach((input, index) => {
                  // ุญุฑฺฉุช ุจู ฺูพ ููฺฏุงู ูุงุฑุฏ ฺฉุฑุฏู ุนุฏุฏ
                  input.addEventListener("input", function () {
                    if (this.value.length === 1) {
                      if (index > 0) {
                        inputs[index - 1].focus(); // ุญุฑฺฉุช ุจู ุงููพูุช ูุจู (ฺูพ)
                      }
