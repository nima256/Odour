                        <!-- Order 2 -->
                        <div class="order-card bg-gradient-to-r from-blue-50 to-cyan-50 border border-blue-200 rounded-2xl p-6 cursor-pointer" onclick="showOrderDetails('ORD-2024-C002', 'لپ‌تاپ لنوو', '۱,۸۵۰,۰۰۰', '۱۴۰۳/۰۷/۲۸', '۲')">
