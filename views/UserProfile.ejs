            </div>

            <!-- Tab Content -->
            <div class="p-6">
                <!-- Current Orders -->
                <div id="current-tab" class="tab-content hidden">
                    <div class="text-center py-12">
                        <h3 class="text-xl font-semibold text-gray-800 mb-2">۳ سفارش جاری</h3>
                        <p class="text-gray-600">سفارشات در حال پردازش</p>
                    </div>
                </div>

                <!-- Completed Orders -->
